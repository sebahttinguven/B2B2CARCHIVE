<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>theme</id>
    <formats>
        <format>jar</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-freya-avocado-dark</directory>
            <outputDirectory>/META-INF/resources/primefaces-freya-avocado-dark</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-freya-avocado-light</directory>
            <outputDirectory>/META-INF/resources/primefaces-freya-avocado-light</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-freya-blue-dark</directory>
            <outputDirectory>/META-INF/resources/primefaces-freya-blue-dark</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-freya-blue-light</directory>
            <outputDirectory>/META-INF/resources/primefaces-freya-blue-light</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-freya-green-dark</directory>
            <outputDirectory>/META-INF/resources/primefaces-freya-green-dark</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-freya-green-light</directory>
            <outputDirectory>/META-INF/resources/primefaces-freya-green-light</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-freya-orange-dark</directory>
            <outputDirectory>/META-INF/resources/primefaces-freya-orange-dark</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-freya-orange-light</directory>
            <outputDirectory>/META-INF/resources/primefaces-freya-orange-light</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-freya-purple-dark</directory>
            <outputDirectory>/META-INF/resources/primefaces-freya-purple-dark</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-freya-purple-light</directory>
            <outputDirectory>/META-INF/resources/primefaces-freya-purple-light</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-freya-red-dark</directory>
            <outputDirectory>/META-INF/resources/primefaces-freya-red-dark</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-freya-red-light</directory>
            <outputDirectory>/META-INF/resources/primefaces-freya-red-light</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-freya-turquoise-dark</directory>
            <outputDirectory>/META-INF/resources/primefaces-freya-turquoise-dark</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-freya-turquoise-light</directory>
            <outputDirectory>/META-INF/resources/primefaces-freya-turquoise-light</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-freya-yellow-dark</directory>
            <outputDirectory>/META-INF/resources/primefaces-freya-yellow-dark</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-freya-yellow-light</directory>
            <outputDirectory>/META-INF/resources/primefaces-freya-yellow-light</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/WEB-INF</directory>
            <outputDirectory>/META-INF/</outputDirectory>
            <includes>
                <include>faces-config.xml</include>
                <include>primefaces-freya.taglib.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/target/classes</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>org/primefaces/freya/component/*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>